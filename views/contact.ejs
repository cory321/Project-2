    <div class="container">
        <div class="page-header">
            <h1>We would love to work with you</h1>
        </div>

        <form action="/step1" method="POST">

        <div class="row">
            <div class="form-group col-xs-4 col-md-3">
                <label for="weddingDate">Wedding Date</label>
                <input class="form-control" type="date" name="weddingDate" required>
            </div> 
        </div>
        <div class="row">
            <div class="form-group col-xs-4 col-md-3">
                <label for="firstName">First Name</label>
                <input class="form-control" type="text" name="firstName" required>
            </div>
            <div class="form-group col-xs-4 col-md-3">
                <label for="lastName">Last Name</label>
                <input class="form-control" type="text" name="lastName" required>
            </div>
        </div>
        <div class="row">
        <div class="form-group col-xs-12">
        <span class="smallpadding">I am </span> 
              <label class="radio-inline">
                <input type="radio" name="person" id="groom" value="groom" checked>The Groom
              </label>
              <label class="radio-inline">
                <input type="radio" name="person" id="bride" value="bride">The Bride
              </label>
              <label class="radio-inline">
                <input type="radio" name="person" id="else" value="else">Someone Else
              </label>
        </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-8 col-md-6">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" required>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <input type="submit" name="submit" value="Continue" class="btn btn-block btn-primary">
            </div>

        </form>        

        </div>
        <div class="row">
            <div class="col-md-12">
                <p>For general inquiries please email <strong>cory@surrealweddingfilms.com</strong></p>
            </div>
        </div>
    </div>
    
